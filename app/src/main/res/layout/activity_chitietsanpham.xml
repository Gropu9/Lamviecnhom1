<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="120px"
        android:id="@+id/tableRow">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="98px"
            android:text="Quay lại"
            android:id="@+id/btnbackchitietsanpham"
            android:background="#ffffff"
            android:textColor="#000000" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="120px"
            android:text="Chi tiết sản phẩm"
            android:id="@+id/textView5"
            android:textStyle="bold"
            android:textSize="20dp"
            android:gravity="center"
            android:background="#ffffff"
            android:textColor="#0e52f1" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="10px"></TableRow>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="320px"
        android:background="#ffffff">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/imagesHinhchitietsanpham"
            android:src="@drawable/h6"
            android:layout_alignParentStart="true"
            android:layout_alignTop="@+id/tableLayout"
            android:background="#ffffff"
            android:layout_weight="30" />

        <TableLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_below="@+id/tableRow"
            android:layout_toEndOf="@+id/imagesHinhchitietsanpham"
            android:id="@+id/tableLayout"
            android:background="#ffffff"
            android:layout_weight="70">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="80px"
                android:background="#ffffff"
                android:baselineAligned="false">

                <TextView
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Tên hàng:"
                    android:id="@+id/textView6"
                    android:layout_column="0"
                    android:layout_height="70px"
                    android:layout_width="match_parent"
                    android:gravity="left|center"
                    android:background="#ffffff"
                    android:textColor="#000000" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="70px"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Găng tay thủ môn"
                    android:id="@+id/txtTenspchitietsanpham"
                    android:layout_column="2"
                    android:textSize="15dp"
                    android:gravity="left|center"
                    android:background="#ffffff" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="80px"
                android:background="#ffffff">

                <TextView
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Giá Bán:"
                    android:id="@+id/textView7"
                    android:layout_column="0"
                    android:layout_height="70px"
                    android:layout_width="match_parent"
                    android:background="#ffffff"
                    android:gravity="left|center"
                    android:textColor="#000000" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="70px"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="10000 VNĐ"
                    android:id="@+id/txtGiachitietsanpham"
                    android:layout_column="2"
                    android:textSize="15dp"
                    android:gravity="left|center"
                    android:background="#ffffff" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="80px" >

                <TextView
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Chất liệu:"
                    android:id="@+id/textView9"
                    android:layout_column="0"
                    android:layout_height="70px"
                    android:layout_width="match_parent"
                    android:gravity="left|center"
                    android:background="#ffffff"
                    android:textColor="#000000" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="70px"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="cao su"
                    android:id="@+id/txtchatlieuchitietsanpham"
                    android:layout_column="2"
                    android:textSize="15dp"
                    android:gravity="left|center"
                    android:background="#ffffff" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#ffffff">

                <TextView
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Màu sắc:"
                    android:id="@+id/textView8"
                    android:layout_column="0"
                    android:layout_height="70px"
                    android:layout_width="match_parent"
                    android:background="#ffffff"
                    android:gravity="left|center"
                    android:textColor="#000000" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="70px"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="xanh"
                    android:id="@+id/txtmausacchitietsanpham"
                    android:layout_column="2"
                    android:textSize="15dp"
                    android:gravity="left|center"
                    android:background="#ffffff" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="3px"></TableRow>

        </TableLayout>
    </LinearLayout>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff">

        <TextView
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Mô tả:"
            android:id="@+id/textView20"
            android:layout_column="0"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:gravity="left"
            android:textColor="#000000" />
    </TableRow>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="Khách hàng là người, là nguồn chính đem lại sức sống cho thương hiệu. Vậy nên luôn kết nối với khách hàng, giao tiếp và hợp tác với họ là chiến lực để xây dựng thương hiệu của bạn vững mạnh trong tương lai. Bạn cũng có thể đẩy mạnh dịch vụ khách hàng ngay từ đầu để đảm bảo rằng họ có thể sử dụng sản phẩm của mình trong tình trạng tốt nhất và luôn nhận được sự hỗ trợ kỹ thuật bất kỳ lúc nào."
        android:id="@+id/txtmotachitietsanpham"
        android:textSize="15dp"
        android:textStyle="bold"
        android:background="#ffffff" />

</LinearLayout>